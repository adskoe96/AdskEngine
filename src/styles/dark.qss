QWidget {
    background-color: #2b2b2b;
    color: #dddddd;
    font-family: "Segoe UI", sans-serif;
    font-size: 10pt;
}

QPushButton {
    background-color: #3c3f41;
    border: 1px solid #5a5a5a;
    padding: 5px;
    border-radius: 3px;
}

QPushButton:hover {
    background-color: #505357;
}

QLineEdit, QTextEdit {
    background-color: #3c3f41;
    border: 1px solid #5a5a5a;
    color: #dddddd;
}
